# Avatar Practice Lab - Environment Variables
# Copy this file to .env and fill in your values

# =====================
# Database
# =====================
DATABASE_URL=postgresql://user:password@localhost:5432/avatar_practice_lab

# =====================
# HeyGen API (Required for Avatar Streaming)
# =====================
HEYGEN_API_KEY=your_heygen_api_key_here

# =====================
# OpenAI API (Required for Transcription & AI Analysis)
# =====================
OPENAI_API_KEY=your_openai_api_key_here

# =====================
# AWS S3 (Optional - for audio storage)
# =====================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# =====================
# Application Settings
# =====================
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000
SESSION_SECRET=your_session_secret_here
